<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="55dp"
        android:text="Ativar a Localização"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTituloLongitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="Longitude"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTituloLatitude"
        app:layout_constraintStart_toStartOf="@+id/txtTituloLongitude"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloLongitude" />

    <TextView
        android:id="@+id/txtAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="271dp"
        android:text="Altitude"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtTituloAltitude"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloAltitude" />

    <TextView
        android:id="@+id/txtTituloLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="Latitude:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/txtLatitude"
        app:layout_constraintStart_toStartOf="@+id/txtLongitude"
        app:layout_constraintTop_toBottomOf="@+id/txtLongitude" />

    <TextView
        android:id="@+id/txtTituloLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="14dp"
        android:text="Longitude:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/txtLongitude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGps" />

    <TextView
        android:id="@+id/txtTituloAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Altitude:"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/txtAltitude"
        app:layout_constraintStart_toStartOf="@+id/txtLatitude"
        app:layout_constraintTop_toBottomOf="@+id/txtLatitude" />

    <TextView
        android:id="@+id/txtLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="Latitude"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTituloAltitude"
        app:layout_constraintStart_toStartOf="@+id/txtTituloLatitude"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloLatitude" />

</androidx.constraintlayout.widget.ConstraintLayout>